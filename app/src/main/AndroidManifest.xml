<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rieger.alarmsmsapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- <uses-permission android:name="android.permission.FLASHLIGHT"/> -->
    <!-- <uses-permission android:name="android.permission.CAMERA"/> -->
    <!-- <uses-feature android:name="android.hardware.camera" /> -->
    <application
        android:name=".util.standard.CreateContextForResource"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.StartActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RuleSelection"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ruleactivitys.CreateNewRule"
            android:label="@string/title_activity_create_new_rule"></activity>
        <activity
            android:name=".view.ruleactivitys.RuleSettings"
            android:label="@string/title_activity_rule_settings"></activity>
        <activity
            android:name=".view.ruleactivitys.SenderSelection"
            android:label="@string/title_activity_sender_selection"></activity>
        <activity
            android:name=".view.ruleactivitys.WordSelection"
            android:label="@string/title_activity_word_selection"></activity>
        <activity
            android:name=".view.ruleactivitys.SoundSelection"
            android:label="@string/title_activity_sound_selection"></activity>
        <activity
            android:name=".view.ruleactivitys.AnswerCreation"
            android:label="@string/title_activity_answer_creation"></activity>
        <activity
            android:name=".view.ruleactivitys.TwitterPostSelection"
            android:label="@string/title_activity_twitter_post_selection"></activity>
        <activity
            android:name=".view.ruleactivitys.NavigationTargetSelection"
            android:label="@string/title_activity_navigation_target_selection"></activity>
        <activity
            android:name=".view.ruleactivitys.ReadingSettings"
            android:label="@string/title_activity_reading_settings"></activity>
        <activity
            android:name=".view.AlarmSettings"
            android:label="@string/title_activity_alarm_settings"></activity>
        <activity
            android:name=".view.DepartmentSettings"
            android:label="@string/title_activity_department_settings"></activity>

        <receiver android:name=".control.receiver.SMSReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".control.widget.AlarmWidget"
            android:label="AlarmSMS Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_alarm" />
        </receiver>

        <activity
            android:name=".view.TestRule"
            android:label="@string/title_activity_test_rule"></activity>
        <activity android:name=".view.LightActivity"></activity>
    </application>

</manifest>
