<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.welcome.WelcomeFragment"
    android:background="#a6a3a4">

    <rieger.alarmsmsapp.control.widget.DynamicImageView
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/launcher"
        android:id="@+id/welcome_fragment_main_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome_fragment_headline"
        android:layout_marginTop="10dp"
        android:id="@+id/welcome_fragment_headline"
        android:layout_below="@+id/welcome_fragment_main_image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/welcome_fragment_info_text"
        android:id="@+id/welcome_fragment_info_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/welcome_fragment_headline"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
