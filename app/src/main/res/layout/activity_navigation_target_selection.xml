<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_navigation_target_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="rieger.alarmsmsapp.view.ruleactivitys.NavigationTargetSelection"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/scrollView5">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/activity_navigation_target_selection_textView_navigation_target_selection_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_navigation_target_selection_description" />

            <TextView
                android:id="@+id/activity_navigation_target_selection_textView_label_editText_navigation_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_navigation_target_selection_textView_navigation_target_selection_description"
                android:layout_below="@+id/activity_navigation_target_selection_textView_navigation_target_selection_description"
                android:layout_marginTop="15dp"
                android:text="@string/activity_navigation_target_selection_label_editText_navigation_target" />

            <AutoCompleteTextView
                android:id="@+id/activity_navigation_target_selection_AutoCompleteTextView_navigation_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_navigation_target_selection_textView_label_editText_navigation_target"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity_navigation_target_selection_textView_label_editText_navigation_target"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="@string/activity_navigation_target_selection_editText_navigation_target_hint" />

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_navigation_target_selection_button_save_navigation_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/general_string_button_save"
        android:layout_alignBottom="@+id/scrollView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
