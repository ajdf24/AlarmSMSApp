<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rieger.alarmsmsapp.view.ruleactivitys.WordSelection"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView9">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/activity_word_selection_textView_label_for_editText_included_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_word_selection_textView_included_words" />

            <EditText
                android:id="@+id/activity_word_selection_editText_included_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_word_selection_textView_label_for_editText_not_included_words"
                android:layout_alignRight="@+id/activity_word_selection_textView_label_for_editText_included_words"
                android:layout_below="@+id/activity_word_selection_textView_label_for_editText_included_words"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="@string/activity_word_selection_editText_included_words_hint"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/activity_word_selection_textView_label_for_editText_not_included_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_word_selection_textView_label_for_editText_included_words"
                android:layout_below="@+id/activity_word_selection_editText_included_words"
                android:layout_marginTop="15dp"
                android:text="@string/activity_word_selection_textView_not_included_words" />

            <EditText
                android:id="@+id/activity_word_selection_editText_not_included_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_word_selection_textView_label_for_editText_not_included_words"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity_word_selection_textView_label_for_editText_not_included_words"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="@string/activity_word_selection_editText_not_included_words_hint"
                android:inputType="textMultiLine" >

            </EditText>

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_done"
        android:id="@+id/activity_word_selection_button_save_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_string_button_save"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView9"
        android:layout_alignEnd="@+id/scrollView9" />

</RelativeLayout>