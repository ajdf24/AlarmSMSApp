<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="rieger.alarmsmsapp.view.ruleactivitys.LightSettings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/activity_light_settings_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/activity_light_settings_main_text" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/activit_set_light_on_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activity_light_settings_main_text"
            android:layout_marginTop="15dp"
            android:text="@string/activity_light_settings_set_light_on_checkbox" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/activit_set_flash_on_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activit_set_light_on_checkbox"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:text="@string/activity_light_settings_set_flash_on_checkbox" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/activit_set_light_on_when_dark_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activit_set_flash_on_checkbox"
            android:layout_marginTop="15dp"
            android:text="@string/activity_light_settings_set_light_on_when_dark_checkbox" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/activity_light_settings_spinner_for_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/activity_light_settings_text_spinner"
            android:entries="@array/time_array"
            android:prompt="@string/activity_answer_creation_spinner_for_answer_distance_prompt" />

        <TextView
            android:id="@+id/activity_light_settings_text_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activit_set_light_on_when_dark_checkbox"
            android:layout_marginTop="16dp"
            android:text="@string/activity_light_settings_text_sipnner" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_light_settings_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_done"
        android:text="@string/general_string_button_save" />
</RelativeLayout>
