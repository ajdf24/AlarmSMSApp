<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_height="72dp"
    android:background="#55ffffff"
    android:layout_width="144dp"
    android:orientation="vertical" android:gravity="center_vertical|center_horizontal">

    <ImageButton android:layout_width="48dp" android:layout_height="48dp"
        android:id="@+id/img_btn" android:background="@drawable/ic_launcher" />
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:paddingLeft="0dp"
        android:textColor="@android:color/black"
        android:text=""
        android:textSize="8pt"
        android:id="@+id/widget_textview"/>
</LinearLayout>