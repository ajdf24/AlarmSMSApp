<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="rieger.alarmsmsapp.view.ruleactivitys.SenderSelection"
    android:id="@+id/activity_sender_selection"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/scrollView6">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/activity_sender_selection_textView_label_for_editText_for_sender_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/activity_sender_selection_textView_description" />

            <EditText
                android:id="@+id/activity_sender_selection_editText_for_sender_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_sender_selection_textView_label_for_editText_for_sender_information"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity_sender_selection_textView_label_for_editText_for_sender_information"
                android:ems="10"
                android:hint="@string/activity_sender_selection_editText_for_sender_information_hint_sms">

            </EditText>

            <Button
                android:id="@+id/activity_sender_selection_button_choose_contacts_for_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_sender_selection_editText_for_sender_information"
                android:layout_below="@+id/activity_sender_selection_editText_for_sender_information"
                android:layout_marginTop="14dp"
                android:text="@string/general_string_button_choose_contact" />

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_done"
        android:id="@+id/activity_sender_selection_button_save_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/general_string_button_save"
        app:layout_anchor="@id/scrollView6"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>