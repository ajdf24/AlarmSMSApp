<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="rieger.alarmsmsapp.view.ruleactivitys.SenderSelection"
    android:id="@+id/activity_sender_selection">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/activity_sender_selection_textView_label_for_editText_for_sender_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/activity_sender_selection_textView_description" />

            <EditText
                android:id="@+id/activity_sender_selection_editText_for_sender_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_sender_selection_textView_label_for_editText_for_sender_information"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity_sender_selection_textView_label_for_editText_for_sender_information"
                android:ems="10"
                android:hint="@string/activity_sender_selection_editText_for_sender_information_hint_sms">

            </EditText>

            <Button
                android:id="@+id/activity_sender_selection_button_choose_contacts_for_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_sender_selection_editText_for_sender_information"
                android:layout_below="@+id/activity_sender_selection_editText_for_sender_information"
                android:layout_marginTop="14dp"
                android:text="@string/general_string_button_choose_contact" />

            <Button
                android:id="@+id/activity_sender_selection_button_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_string_button_quit"
                android:layout_below="@+id/activity_sender_selection_button_choose_contacts_for_sender"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/activity_sender_selection_button_save_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_string_button_save"
                android:layout_below="@+id/activity_sender_selection_button_choose_contacts_for_sender"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>