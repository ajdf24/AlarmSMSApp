<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rieger.alarmsmsapp.view.ruleactivitys.TwitterPostSelection"
    android:background="@color/background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/activity_facebook_post_selection_textView_facebook_post_activity_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_twitter_post_selection_description" />

            <EditText
                android:id="@+id/activity_facebook_post_selection_editText_message_for_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity_facebook_post_selection_textView_facebook_post_activity_description"
                android:ems="10"
                android:hint=""
                android:inputType="textMultiLine">

                <requestFocus />
            </EditText>

            <CheckBox
                android:id="@+id/activity_facebook_post_selection_checkBox_add_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/activity_facebook_post_selection_editText_message_for_facebook"
                android:text="@string/activity_twitter_post_selection_checkBox_add_message_text" />

            <Button
                android:id="@+id/activity_facebook_post_selection_button_save_facebook_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity_facebook_post_selection_checkBox_add_message_text"
                android:layout_marginTop="20dp"
                android:text="@string/general_string_button_save" />

            <Button
                android:id="@+id/activity_facebook_post_selection_button_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/activity_facebook_post_selection_button_save_facebook_post"
                android:layout_alignBottom="@+id/activity_facebook_post_selection_button_save_facebook_post"
                android:layout_alignParentLeft="true"
                android:text="@string/general_string_button_quit" />

            <TextView
                android:id="@+id/activity_facebook_post_selection_textView_character_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/activity_facebook_post_selection_button_save_facebook_post"
                android:layout_alignRight="@+id/activity_facebook_post_selection_button_save_facebook_post"
                android:layout_alignTop="@+id/activity_facebook_post_selection_checkBox_add_message_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>